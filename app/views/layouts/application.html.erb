<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropown" aria-contorols="navbarNavDropdown" aria-expand="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">
          </button>
          <div class= "navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user.id) %>
                </li>
                <li>
                  <%= link_to "Users", users_path %>
                </li>
                <li>
                  <%= link_to "Books", books_path %>
                </li>
                <li>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                </li>

              <% else %>
                <li>
                  <%= link_to "Home", root_path %>
                </li>
                <li>
                  <%= link_to "About", home_about_path %>
                </li>
                <li>
                  <%= link_to "Sign Up", new_user_registration_path %>
                </li>
                <li>
                  <%= link_to "Sign In", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <%= 'CopyRight Infratop.inc'%>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
