<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
</head>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="users_info">
        <h2>User info</h2>
          <div class="users_image"><%= attachment_image_tag @user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg" %></div>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book_new, local:true do |f| %>
          <a>Title</a>
          <%= f.text_field :title, class: 'form-control' %>
          <a>Opinion</a>
          <%= f.text_area :body, class: 'form-control' %></br>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="users">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </table>
      </div>

      <% if @book.favorited_by?(current_user) %>
        <p>
          <%= link_to book_favorites_path(@book), method: :delete do %>
            ♥<%= @book.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to book_favorites_path(@book), method: :post do %>
            ♡<%= @book.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>

      <div class="comments">
        <p>Comments：<%= @book.post_comments.count %></p>
        <table class="table">
          <% @book.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag post_comment, :profile_image_id, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td><%= post_comment.user.name %></td>
            <td><%= post_comment.comment %></td>
            <% if post_comment.user == current_user %>
            <td>
                <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </table>
      </div>


      <div class="new-comment">
      <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "Comment here", class: 'form-control' %>
        <%= f.submit "Send Comment", class: "btn btn-success" %>
      <% end %>
      </div>


    </div>
  </div>
</div>
