<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
</head>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="users_info">
        <h2>User info</h2>
          <div class="users_image"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <%= link_to edit_user_path(current_user), class: "btn btn-secondary" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
      </div>

      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book_new, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="users">
        <h2>Book detail</h2>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <% if current_user.id == @user.id %>
            <th></th>
            <th></th>
            <% end %>
          </tr>
          <tr>
            <td>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if current_user.id == @user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          <tr>
        </table>
      </div>
    </div>
  </div>
</div>
