<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
</head>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="users_info">
        <h2>User info</h2>
          <div class="users_image"><%= attachment_image_tag @user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg" %></div>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book_new, local:true do |f| %>
          <a>Title</a>
          <%= f.text_field :title, class: 'form-control' %>
          <a>Opinion</a>
          <%= f.text_area :body, class: 'form-control' %></br>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="users">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
