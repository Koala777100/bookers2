<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
</head>

<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book_new %>

    <div class="col-md-8 offset-md-1">
      <div class="users">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </table>
      </div>

      <% if @book.favorited_by?(current_user) %>
        <p>
          <%= link_to book_favorites_path(@book), method: :delete do %>
            ♥<%= @book.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to book_favorites_path(@book), method: :post do %>
            ♡<%= @book.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>

      <div class="comments">
        <p>Comments：<%= @book.post_comments.count %></p>
        <table class="table">
          <% @book.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag post_comment, :profile_image_id, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td><%= post_comment.user.name %></td>
            <td><%= post_comment.comment %></td>
            <% if post_comment.user == current_user %>
            <td>
                <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </table>
      </div>


      <div class="new-comment">
      <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "Comment here", class: 'form-control' %>
        <%= f.submit "Send Comment", class: "btn btn-success" %>
      <% end %>
      </div>


    </div>
  </div>
</div>
