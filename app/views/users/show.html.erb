<div class="container">
  <div class="row">
    <div class="col-lg-4">
       <div class="users_info">
        <h2>User info</h2>
          <div class="users_image"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <%= link_to 'edit profile', edit_user_path(current_user), class: "btn btn-secondary"%>
      </div>

      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="users">
        <h2>Books</h2>
        <table class="table table-striped">
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

